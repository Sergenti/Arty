#:kivy 1.0
#:import kivy kivy

<CollectionToolbar>:

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,1

        Button:
            id: compare_btn
            text: 'Compare Selection'
            on_press: root.compare()
        Button:
            id: export_btn
            text: 'Export Selection'
            on_press: root.export()

        Spinner:
            id: select_sort
            text: 'Sort by:'
            values: ['title', 'artist', 'datation', 'technique']

            on_text: root.sort_by(select_sort.text)
        
        Button:
            id: filter_select
            text: 'Filter'
            on_press: root.open_filter()