#:kivy 1.0
#:import kivy kivy

<CollectionToolbar>:

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,1

        Button:
            id: home_btn
            text: 'Home'
            on_release: root.to_home_screen()

        Button:
            id: save_btn
            text: 'Save'
            on_release: root.save_coll()

        Button:
            id: compare_btn
            text: 'Compare Selection'
            on_release: root.compare()
        Button:
            id: export_btn
            text: 'Export Selection'
            on_release: root.export()

        Spinner:
            id: select_sort
            text: 'Sort by:'
            values: root.sorting_attributes#['Title [A-Z]', 'Title [Z-A]','Artist [A-Z]','Artist [Z-A]','Datation Increasing','Datation Decreasing']
            on_text: root.sort_by(select_sort.text)
        
        Button:
            id: filter_select
            text: 'Filter'
            on_release: root.open_filter()