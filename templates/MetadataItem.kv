#:kivy 1.0
#:import kivy kivy

<MetadataItem>:
    Label:
        id: label
        text_size: self.size
        halign: "left"
        valign: "middle"
        padding_x: dp(15)
        size_hint_x: 0.4
    TextInput:
        id: text_input
        write_tab: False
        multiline: False
        cursor_color: (0, 0, 0, 1)