#:kivy 1.0
#:import kivy kivy

<CollectionGridTile>
    size_hint_y: None
    height: dp(240)

    AnchorLayout:
        pos: root.pos # critical for the checkboxes to align with their image
        size_hint: 1, 1
        anchor_x: 'left'
        anchor_y: 'top'

        CheckBox:
            id: select_image
            size_hint: (None, None)
            size: (dp(35), dp(35))
            pos_hint: {'left': 1, 'top': 1}

            background_checkbox_normal: 'resources/empty.png'
            background_checkbox_down: 'resources/check-box.png'
            on_active: root.checkbox_click(self, self.active)
