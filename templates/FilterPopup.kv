#:kivy 1.0
#:import kivy kivy

<FilterPopup>:
    id: filter_box
    auto_dismiss: True
    size_hint: 0.6,0.35
    height: dp(250)
    pos_hint: {"top":0.8}
    title: 'Filter by:'
    padding: dp(10)

    BoxLayout:
        orientation: 'vertical'
        halign: 'center'
        valign: 'center'
        size:  root.width, root.height

        TextInput:
            id: title_input
            hint_text: 'title'
            text: root.title_art
            multiline: False
            size_hint_y: None
            height: dp(33)

        TextInput:
            id: artist_input
            hint_text: 'artist'
            text: root.artist
            multiline: False
            size_hint_y: None
            height: dp(33)
        
        TextInput:
            id: style_input
            hint_text: 'style'
            text: root.style
            multiline: False
            size_hint_y: None
            height: dp(33)

        TextInput:
            id: technique_input
            hint_text: 'technique'
            text: root.technique
            multiline: False
            size_hint_y: None
            height: dp(33)
        BoxLayout:
            orientation: 'horizontal'
            height: dp(32)
            size_hint_y: None
            spacing: dp(4)

            Label:
                id: mode_lbl
                text: 'mode :'
                height: dp(33)

            ToggleButton:
                id: mode_btn
                text: root.mode_text
                state: root.mode
                height: dp(33)
                on_state: root.select_mode()

        BoxLayout:
            orientation: 'horizontal'
            height: dp(32)
            size_hint_y: None
            spacing: dp(4)

            Button:
                id: filter_btn
                text: 'Filter'
                size_hint_y: None
                height: dp(33)
                on_release: root.filter_by()
                on_release: root.save_values()
            
            Button:
                id: reset_btn
                text: 'Reset'
                size_hint_y: None
                height: dp(33)
                on_release: root.reset_grid()
                on_release: root.dismiss()