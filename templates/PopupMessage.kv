    Label:
        text: root.message
        size_hint: 1, 0.6
        valign: "middle"
        halign: "center"
        pos_hint: {"x":0, "top":1}

    Button:
        id: popup_btn
        text: "ok"
        size_hint: 1, 0.4
        pos_hint: {"x":0, "y":0.1}