#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<CollectionScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        
        CollectionToolbar:
            id: toolbar
            height: dp(25)
            size_hint: 1, None

        BoxLayout:
            ScrollView:
                CollectionImageList:
                    id: grid

            CollectionPanel:
                id: panel
