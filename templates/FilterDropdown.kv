#:kivy 1.0
#:import kivy kivy

<FilterDropdown>:
    id: filter_box
    auto_dismiss: True

    TextInput:
        id: title_input
        hint_text: 'title'
        multiline: False
        size_hint_y: None
        height: dp(33)

    TextInput:
        id: artist_input
        hint_text: 'artist'
        multiline: False
        size_hint_y: None
        height: dp(33)

    TextInput:
        id: technique_input
        hint_text: 'technique'
        multiline: False
        size_hint_y: None
        height: dp(33)

    Button:
        id: filter_btn
        text: 'Filter'
        size_hint_y: None
        height: dp(33)
        on_press: root.filter_by()

    Button:
        id: reset_btn
        text: 'Reset'
        size_hint_y: None
        height: dp(33)
        on_press: root.reset_grid()