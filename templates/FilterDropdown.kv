#:kivy 1.0
#:import kivy kivy

<FilterDropdown>:
    id: filter_box
    auto_dismiss: True

    TextInput:
        id: title_input
        hint_text: 'title'
        multiline: False
        size_hint_y: None
        height: 44

    TextInput:
        id: artist_input
        hint_text: 'artist'
        multiline: False
        size_hint_y: None
        height: 44

    TextInput:
        id: technique_input
        hint_text: 'technique'
        multiline: False
        size_hint_y: None
        height: 44

    Button:
        id: filter_btn
        text: 'Filter'
        size_hint_y: None
        height: 44
        # on_press: root.state = False
