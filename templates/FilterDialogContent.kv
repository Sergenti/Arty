#:kivy 1.0
#:import kivy kivy

<FilterDialogContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "450dp"

    MDTextField:
        id: title_input
        hint_text: 'Title'

    MDTextField:
        id: artist_input
        hint_text: 'Artist'

    MDTextField:
        id: style_input
        hint_text: 'Style'

    MDTextField:
        id: technique_input
        hint_text: 'Technique'
    
    MDTextField:
        id: medium_input
        hint_text: 'Medium'

    BoxLayout:
        orientation: 'horizontal'

        MDLabel:
            text: 'Datation :'

        MDTextField:
            id: datation_min_input
            input_filter: 'int'
            text: '-5000'
            pos_hint: {'center_y': 0.5}

        MDTextField:
            id: datation_max_input
            input_filter: 'int'
            text: '5000'
            pos_hint: {'center_y': 0.5}

    BoxLayout:
        orientation: 'horizontal'

        MDLabel:
            text: 'Mode :'

        # Toggle Buttons
        MDBoxLayout:
            id: mode_btn
            adaptive_size: True
            pos_hint: {"center_x": .5, "center_y": .5}

            ToggleButtonWidget:
                text: 'AND'
                state: 'down'
                group: 'mode'

            ToggleButtonWidget:
                text: 'OR'
                state: 'normal'
                group: 'mode'
