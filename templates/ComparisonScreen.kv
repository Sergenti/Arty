#:kivy 1.0
#:import kivy kivy

<ComparisonScreen>:
    #orentation : 'horizontal'
    
    BoxLayout:
        id: layout_container

<Layout2>: 
    BoxLayout:
        id: layout_2
        size: root.width, root.height
        Image: 
            id : image_1
            allow_strech : True
            size_hint_y: 1
            keep_ratio : True  
        Image: 
            id : image_2
            allow_strech : True
            size_hint_y: 1
            keep_ratio : True
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        Button:
            text: 'Back'
            size_hint: None, None
            size: dp(130), dp(50)
            on_release: root.parent.parent.on_back_released()

