#:kivy 1.0
#:import kivy kivy

<CollectionPanel>:
    orientation: 'vertical'

    BoxLayout:
        Image:
            source: root.source
            height: dp(20)

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text: 'Artiste'
            TextInput:
                id: meta_artist
                text: root.current_image.artist
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Titre'
            TextInput:
                id: meta_title
                text: root.current_image.title
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Datation'
            TextInput:
                id: meta_year
                text: root.current_image.year
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Technique'
            TextInput:
                id: meta_technique
                text: root.current_image.technique
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Site de conservation'
            TextInput:
                id: meta_conservation_site
                text: root.current_image.conservation_site
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Site de production'
            TextInput:
                id: meta_production_site
                text: root.current_image.production_site
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Dimensions'
            TextInput:
                id: meta_dimensions
                text: root.current_image.dimensions
                height: 50
                multiline: False
        BoxLayout:
            Label:
                text: 'Notes'
            TextInput:
                id: meta_user_notes
                text: root.current_image.user_notes
                height: 50
                multiline: True
