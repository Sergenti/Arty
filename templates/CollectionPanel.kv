#:kivy 1.0
#:import kivy kivy

<CollectionPanel>:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.9
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        ImagePreview:
            id: preview
            allow_stretch: True

    BoxLayout:
        id: metadata_container
        orientation: 'vertical'