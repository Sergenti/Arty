#:kivy 1.0
#:import kivy kivy

<CollectionPanel>:
    orientation: 'vertical'

    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.9
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        ImagePreview:
            id: preview
            allow_stretch: True
        
        Palette:
            id: palette
            size_hint_y: 0.1

    BoxLayout:
        id: metadata_container
        orientation: 'vertical'