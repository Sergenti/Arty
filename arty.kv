#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

<CollectionScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        CollectionToolbar:
            id: toolbar
            height: dp(25)
            size_hint: 1, None


        BoxLayout:
            ScrollView:
                CollectionGrid:
                    id: grid

            CollectionPanel:
                id: panel
