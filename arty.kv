<CollectionScreen>:
    BoxLayout:
        BoxLayout:

            orientation: 'vertical'

            CollectionToolbar:
                height: dp(25)
                size_hint: 1, None

            ScrollView:
                CollectionGrid:
                    id: grid

        CollectionPanel:
            id: panel

