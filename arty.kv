<CollectionScreen>:
    BoxLayout:
        CollectionGrid:
            id: grid

        CollectionPanel:
            id: panel

        # Button:
        #     text: 'Goto settings'
        #     on_press:
        #         root.manager.transition.direction = 'left'
        #         root.manager.current = 'Settings'
        # Button:
        #     text: 'Quit'

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'Collection'


<CollectionGridImage>:
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'

        canvas:
            Rectangle:
                source: root.source
                pos: self.pos
                size: self.size

        #Image:
        #    source: root.source
        #    size_hint: 1,1
        #    height: dp(40) # KEEP ASPECT RATIO (40: height)

        CheckBox:
            id: select_image
            color: (0,1,0)
            size_hint: (0.1,0.1)
